<div class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <h1 class="text-4xl font-light text-gray-900 mb-2">Create Team</h1>
      <p class="text-gray-600">Set up your retrospective team</p>
    </div>

    <!-- Flash Messages -->
    <% if alert = flash[:alert] %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-lg" id="alert">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-red-800"><%= alert %></p>
          </div>
        </div>
      </div>
    <% end %>

    <% if notice = flash[:notice] %>
      <div class="bg-green-50 border-l-4 border-green-400 p-4 rounded-lg" id="notice">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-green-800"><%= notice %></p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Validation Errors -->
    <% if @team.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-lg">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @team.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8" data-controller="team-form">
      <%= form_with model: @team, class: "space-y-8" do |form| %>
        <!-- Team Name Section -->
        <div class="space-y-6">
          <div>
            <label for="team_name" class="block text-sm font-medium text-gray-700 mb-2">
              Team Name
            </label>
            <%= form.text_field :name,
                               required: true,
                               autofocus: true,
                               placeholder: "Enter your team name",
                               class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white text-gray-900 placeholder-gray-500" %>
          </div>
        </div>

        <!-- Team Members Section -->
        <div class="space-y-6">
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Team Members</h3>
            <p class="text-sm text-gray-600 mb-6">Add team members by entering their email addresses. You'll automatically be added as the team creator.</p>

            <!-- Participants Container -->
            <div id="participants-container" class="space-y-4">
              <!-- Initial participant input -->
              <%= render 'participant_input' %>
            </div>

            <!-- Add More Button -->
            <div class="mt-4">
              <%= link_to add_participant_input_teams_path,
                         method: :post,
                         data: { turbo_method: :post },
                         class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add Another Member
              <% end %>
            </div>
          </div>
        </div>

        <!-- Hidden field to collect all emails -->
        <input type="hidden" name="participant_emails" data-team-form-target="emailsField">

        <!-- Actions -->
        <div class="space-y-4 pt-6 border-t border-gray-200">
          <%= form.submit "Create Team",
                         class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-xl text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl",
                         data: { action: "click->team-form#collectEmails" } %>

          <div class="text-center">
            <%= link_to "Cancel", teams_path,
                       class: "text-sm text-gray-600 hover:text-gray-500 transition-colors duration-200" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>