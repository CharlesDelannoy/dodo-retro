<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">My Teams</h1>
      <p class="mt-1 text-gray-600">Manage your retrospective teams</p>
    </div>
    <%= link_to "Create New Team", new_team_path,
               class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-xl text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" %>
  </div>

  <!-- Teams Grid -->
  <% if @teams.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @teams.each do |team| %>
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 hover:shadow-xl transition-all duration-200">
          <!-- Team Header -->
          <div class="flex items-start justify-between mb-4">
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-900 mb-1">
                <%= link_to team.name, team, class: "hover:text-blue-600 transition-colors" %>
              </h3>
              <p class="text-sm text-gray-500">
                Created by <%= team.creator.username %>
              </p>
            </div>
          </div>

          <!-- Team Stats -->
          <div class="flex items-center space-x-4 mb-4">
            <div class="flex items-center text-sm text-gray-600">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM9 9a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <%= pluralize(team.users.count, 'member') %>
            </div>
          </div>

          <!-- Team Members Preview -->
          <div class="flex items-center space-x-2 mb-4">
            <% team.users.limit(3).each do |user| %>
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center text-sm font-medium text-blue-600">
                <%= user.username.first.upcase %>
              </div>
            <% end %>
            <% if team.users.count > 3 %>
              <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center text-sm font-medium text-gray-600">
                +<%= team.users.count - 3 %>
              </div>
            <% end %>
          </div>

          <!-- Actions -->
          <div class="flex justify-between items-center pt-4 border-t border-gray-100">
            <%= link_to "View Team", team,
                       class: "text-sm text-blue-600 hover:text-blue-500 font-medium transition-colors" %>
            <span class="text-xs text-gray-400">
              <%= time_ago_in_words(team.created_at) %> ago
            </span>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM9 9a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No teams yet</h3>
      <p class="text-gray-600 mb-6">Get started by creating your first retrospective team.</p>
      <%= link_to "Create Your First Team", new_team_path,
                 class: "inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-xl text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" %>
    </div>
  <% end %>
</div>