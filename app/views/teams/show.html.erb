<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="flex justify-between items-start mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @team.name %></h1>
      <p class="text-gray-600">Created by <%= @team.creator.username %> â€¢ <%= time_ago_in_words(@team.created_at) %> ago</p>
    </div>

    <div class="flex items-center space-x-4">
      <%= link_to "Back to Teams", teams_path,
                 class: "text-gray-600 hover:text-gray-500 transition-colors" %>
    </div>
  </div>

  <!-- Team Stats Cards -->
  <div class="grid gap-6 md:grid-cols-3 mb-8">
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM9 9a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-bold text-gray-900"><%= @team.users.count %></p>
          <p class="text-sm text-gray-600">Team Members</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-bold text-gray-900">0</p>
          <p class="text-sm text-gray-600">Retrospectives</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
        <div>
          <p class="text-2xl font-bold text-gray-900">0</p>
          <p class="text-sm text-gray-600">Action Items</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Team Members Section -->
  <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 mb-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-semibold text-gray-900">Team Members</h2>
      <span class="text-sm text-gray-500"><%= pluralize(@team.users.count, 'member') %></span>
    </div>

    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      <% @participants.each do |participant| %>
        <div class="flex items-center space-x-3 p-4 rounded-xl bg-gray-50 hover:bg-gray-100 transition-colors">
          <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center text-sm font-semibold text-blue-600">
            <%= participant.user.username.first.upcase %>
          </div>
          <div class="flex-1">
            <p class="font-medium text-gray-900"><%= participant.user.username %></p>
            <p class="text-sm text-gray-500"><%= participant.user.email_address %></p>
            <% if participant.user == @team.creator %>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mt-1">
                Creator
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Pending Invitations Section -->
  <% if @pending_invitations.any? %>
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 mb-8">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold text-gray-900">Pending Invitations</h2>
        <span class="text-sm text-gray-500"><%= pluralize(@pending_invitations.count, 'invitation') %></span>
      </div>

      <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
        <% @pending_invitations.each do |invitation| %>
          <div class="flex items-center space-x-3 p-4 rounded-xl bg-yellow-50 hover:bg-yellow-100 transition-colors border border-yellow-200">
            <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center text-sm font-semibold text-yellow-600">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <p class="font-medium text-gray-900"><%= invitation.email %></p>
              <p class="text-xs text-gray-500">Invited by <%= invitation.inviter.username %></p>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 mt-1">
                Pending
              </span>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-4 p-4 bg-blue-50 rounded-xl border border-blue-200">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-blue-800">
              These people will automatically join the team when they sign up with their invited email address.
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Recent Activity Section (placeholder for future features) -->
  <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Recent Activity</h2>

    <div class="text-center py-8">
      <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No activity yet</h3>
      <p class="text-gray-600 mb-6">Start your first retrospective to see team activity here.</p>
      <button class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" disabled>
        Start Retrospective (Coming Soon)
      </button>
    </div>
  </div>
</div>