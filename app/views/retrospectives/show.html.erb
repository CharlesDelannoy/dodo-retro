<%= turbo_stream_from @retrospective.team, @retrospective %>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="flex justify-between items-start mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @retrospective.title %></h1>
      <p class="text-gray-600">
        <%= @retrospective.retrospective_type.name %> •
        Led by <%= @retrospective.creator.username %> •
        <%= time_ago_in_words(@retrospective.created_at) %> ago
      </p>
    </div>

    <div class="flex items-center space-x-4">
      <%= link_to "Back to Team", team_path(@retrospective.team),
                 class: "text-gray-600 hover:text-gray-500 transition-colors" %>
    </div>
  </div>

  <!-- Step Content -->
  <div id="retrospective-content">
    <%= render partial: 'step_content', locals: { retrospective: @retrospective, is_leader: @is_leader, columns: @columns } %>
  </div>
</div>
