<div id="ice-breaker-question" class="bg-white rounded-xl shadow-md p-8 mb-6">
  <% if question.present? %>
    <% question_type = question.question_type %>
    <div class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium mb-4
                <%= question_type == 'question' ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800' %>">
      <%= question_type.titleize %>
    </div>
    <p class="text-2xl font-semibold text-gray-900">
      <%= question.content %>
    </p>
  <% else %>
    <p class="text-xl text-gray-400">
      No question selected yet. Leader can pick one below!
    </p>
  <% end %>
</div>
