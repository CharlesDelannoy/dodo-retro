<div class="mb-8" data-controller="tickets" data-tickets-retrospective-id-value="<%= retrospective.id %>">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Ticket Creation</h2>
      <p class="text-gray-600">Write down your thoughts and drop them in the appropriate column</p>
    </div>

    <% if is_leader %>
      <%= button_to advance_step_retrospective_path(retrospective),
                    method: :post,
                    class: "px-6 py-3 border border-transparent text-sm font-medium rounded-xl text-white bg-green-600 hover:bg-green-700 transition-all duration-200 shadow-lg" do %>
        Continue to Next Step
        <svg class="w-5 h-5 inline-block ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      <% end %>
    <% end %>
  </div>

  <!-- Columns Grid -->
  <div class="grid gap-6 md:grid-cols-<%= columns.count %>">
    <% columns.each do |column| %>
      <div class="flex flex-col min-h-[600px]">
        <!-- Column Header -->
        <div class="rounded-t-2xl p-4 border-2 border-b-0" style="border-color: <%= column.color %>; background-color: <%= column.color %>20;">
          <h3 class="text-lg font-semibold text-center" style="color: <%= column.color %>;">
            <%= column.name %>
          </h3>
        </div>

        <!-- Tickets Container -->
        <div id="column-<%= column.id %>"
             class="flex-1 bg-gray-50 rounded-b-2xl p-4 border-2 border-t-0 space-y-3"
             style="border-color: <%= column.color %>;"
             data-tickets-target="column"
             data-column-id="<%= column.id %>">

          <%= turbo_frame_tag "column_#{column.id}_tickets" do %>
            <!-- Only show current user's tickets during ticket creation -->
            <% retrospective.tickets.where(retrospective_column_id: column.id, author: Current.user).order(created_at: :asc).each do |ticket| %>
              <%= render partial: 'tickets/ticket', locals: { ticket: ticket } %>
            <% end %>
          <% end %>
        </div>

        <!-- Add Ticket Button -->
        <div class="mt-3">
          <button data-action="click->tickets#showForm"
                  data-column-id="<%= column.id %>"
                  data-column-name="<%= column.name %>"
                  data-column-color="<%= column.color %>"
                  class="w-full px-4 py-2 border-2 border-dashed rounded-xl text-sm font-medium transition-all duration-200 hover:bg-gray-50"
                  style="border-color: <%= column.color %>; color: <%= column.color %>;">
            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Ticket
          </button>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Ticket Form Modal (Hidden by default) -->
  <div id="ticket-form-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full mx-4">
      <h3 class="text-xl font-bold text-gray-900 mb-4">
        Create Ticket - <span id="modal-column-name" class="font-semibold"></span>
      </h3>

      <form data-tickets-target="form" data-action="submit->tickets#submitTicket">
        <input type="hidden" data-tickets-target="columnId" name="column_id">

        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">Content</label>
          <textarea data-tickets-target="content"
                    name="content"
                    rows="4"
                    class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="What's on your mind?"></textarea>
        </div>

        <div class="flex justify-end gap-3">
          <button type="button"
                  data-action="click->tickets#closeForm"
                  class="px-4 py-2 border border-gray-300 rounded-xl text-gray-700 hover:bg-gray-50">
            Cancel
          </button>
          <button type="submit"
                  class="px-4 py-2 bg-blue-600 text-white rounded-xl hover:bg-blue-700">
            Create Ticket
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
