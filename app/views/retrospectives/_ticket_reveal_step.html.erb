<div class="mb-8" data-controller="tickets" data-tickets-retrospective-id-value="<%= retrospective.id %>">
  <!-- Header -->
  <%= turbo_frame_tag "reveal-header" do %>
    <%= render partial: 'retrospectives/reveal_header', locals: { retrospective: retrospective, is_leader: is_leader } %>
  <% end %>

  <!-- Three Column Layout: Left unrevealed, Middle revealed, Right create -->
  <div class="flex gap-4 items-start justify-between">
    <!-- Left Sidebar: User's Unrevealed Tickets -->
    <div style="width: 20vw;">
      <%= turbo_frame_tag "revealer-section",
                          src: revealer_section_retrospective_path(retrospective),
                          loading: :lazy,
                          data: {
                            controller: "reveal-buttons",
                            "reveal-buttons-current-user-id-value": Current.user&.id,
                            "reveal-buttons-current-revealing-user-id-value": retrospective.current_revealing_user_id
                          } do %>
        <div class="text-center py-8 text-gray-500">Loading...</div>
      <% end %>
    </div>

    <!-- Middle: Revealed Tickets Grid -->
    <div style="width: 55vw;">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Revealed Tickets</h3>

    <div class="grid gap-6 md:grid-cols-<%= columns.count %>">
      <% columns.each do |column| %>
        <div class="flex flex-col">
          <!-- Column Header -->
          <div class="rounded-t-2xl p-4 border-2 border-b-0" style="border-color: <%= column.color %>; background-color: <%= column.color %>20;">
            <h4 class="text-lg font-semibold text-center" style="color: <%= column.color %>;">
              <%= column.name %>
            </h4>
          </div>

          <!-- Revealed Tickets Container -->
          <div id="revealed-column-<%= column.id %>"
               class="flex-1 bg-gray-50 rounded-b-2xl p-4 border-2 border-t-0 space-y-3 min-h-[300px]"
               style="border-color: <%= column.color %>;">

            <%= turbo_frame_tag "revealed_column_#{column.id}_tickets" do %>
              <!-- Show only revealed tickets -->
              <% retrospective.tickets.revealed.where(retrospective_column_id: column.id).each do |ticket| %>
                <%= render partial: 'tickets/ticket', locals: { ticket: ticket } %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    </div>

    <!-- Right Sidebar: Keep Creating -->
    <div style="width: 20vw;">
      <div class="bg-blue-50 rounded-lg p-3">
        <h3 class="text-xs font-semibold text-blue-900 mb-2">Keep Creating</h3>

        <div class="flex gap-1 mb-3">
          <% columns.each do |column| %>
            <button data-action="click->tickets#showForm"
                    data-column-id="<%= column.id %>"
                    data-column-name="<%= column.name %>"
                    data-column-color="<%= column.color %>"
                    class="px-2 py-1 rounded text-xs font-medium transition-all duration-200 hover:bg-white"
                    style="width: 33%; color: <%= column.color %>;">
              <%= column.name %>
            </button>
          <% end %>
        </div>

        <!-- Inline Ticket Form (Hidden by default) -->
        <div id="inline-ticket-form" class="hidden">
          <form data-tickets-target="form" data-action="submit->tickets#submitTicket" class="bg-white rounded-lg p-3 border border-gray-100">
            <input type="hidden" data-tickets-target="columnId" name="column_id">

            <div class="mb-2">
              <label class="block text-xs font-medium text-gray-700 mb-1">
                New Ticket - <span id="form-column-name" class="font-semibold"></span>
              </label>
              <textarea data-tickets-target="content"
                        name="content"
                        rows="4"
                        class="w-full px-2 py-1.5 text-sm border border-gray-100 rounded
                        placeholder="What's on your mind?"></textarea>
            </div>

            <div class="flex justify-end gap-2">
              <button type="button"
                      data-action="click->tickets#closeForm"
                      class="px-3 py-1 text-xs border border-gray-300 rounded text-gray-700 hover:bg-gray-50">
                Cancel
              </button>
              <button type="submit"
                      class="px-3 py-1 text-xs bg-blue-600 text-white rounded hover:bg-blue-700">
                Create
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Ticket Form Modal (Hidden by default) - Reuse from ticket creation -->
  <div id="ticket-form-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full mx-4">
      <h3 class="text-xl font-bold text-gray-900 mb-4">Create Ticket</h3>

      <form data-tickets-target="form" data-action="submit->tickets#submitTicket">
        <input type="hidden" data-tickets-target="columnId" name="column_id">

        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">Content</label>
          <textarea data-tickets-target="content"
                    name="content"
                    rows="4"
                    class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="What's on your mind?"></textarea>
        </div>

        <div class="flex justify-end gap-3">
          <button type="button"
                  data-action="click->tickets#closeForm"
                  class="px-4 py-2 border border-gray-300 rounded-xl text-gray-700 hover:bg-gray-50">
            Cancel
          </button>
          <button type="submit"
                  class="px-4 py-2 bg-blue-600 text-white rounded-xl hover:bg-blue-700">
            Create Ticket
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
